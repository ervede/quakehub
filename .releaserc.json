{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "ğŸš€ New Features" },
            { "type": "enhancement", "section": "ğŸš€ New Features" },
            { "type": "fix", "section": "ğŸ› Bug Fixes" },
            { "type": "bug", "section": "ğŸ› Bug Fixes" },
            { "type": "chore", "section": "ğŸ§¹ Maintenance" },
            { "type": "refactor", "section": "ğŸ§¹ Maintenance" },
            { "type": "cleanup", "section": "ğŸ§¹ Maintenance" },
            { "type": "docs", "section": "ğŸ“š Documentation" },
            { "type": "style", "section": "ğŸ”§ Other Changes" },
            { "type": "perf", "section": "ğŸ”§ Other Changes" },
            { "type": "test", "section": "ğŸ”§ Other Changes" }
          ]
        }
      }
    ],
    "@semantic-release/changelog",
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "custom_components/quakehub/manifest.json"
        ],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
